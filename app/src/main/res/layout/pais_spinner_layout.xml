<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/banderaImagen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/argentina"
        tools:layout_conversion_wrapHeight="300"
        tools:layout_conversion_wrapWidth="300" />

    <TextView
        android:id="@+id/nombrePais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Argentina"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/banderaImagen"
        app:layout_constraintStart_toEndOf="@+id/banderaImagen"
        app:layout_constraintTop_toTopOf="@+id/banderaImagen"
        tools:layout_conversion_wrapHeight="81"
        tools:layout_conversion_wrapWidth="257" />

</androidx.constraintlayout.widget.ConstraintLayout>